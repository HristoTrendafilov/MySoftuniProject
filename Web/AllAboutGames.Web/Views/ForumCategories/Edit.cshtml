@using AllAboutGames.Web.ViewModels.InputModels
@model AddForumCategoryInputModel
@{
    this.ViewData["Title"] = "Edit category";
}
<center>
    <h1>Edit category: <span class="text-info">@Model.Name</span></h1>
</center>

<form class="text-center border border-light p-5" method="post">
    <center>
        <div class="form-group col-md-4">
            <label asp-for="Name"></label>
            <input value="@Model.Name" asp-for="Name" class="form-control" width:20em />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Image"></label>
            <input value="@Model.Image" asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Description"></label>
            <input value="@Model.Description" asp-for="Description" class="form-control" width:20em />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <hr />
        <input type="submit" class="btn btn-outline-success" value="Edit" style="width:200px" />
    </center>
</form>