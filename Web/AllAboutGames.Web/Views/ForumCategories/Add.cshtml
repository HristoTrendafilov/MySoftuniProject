@using AllAboutGames.Web.ViewModels.InputModels
@model AddForumCategoryInputModel
@{ 
    this.ViewData["Title"] = "Add New category";
}
<center>
    <h1>@this.ViewData["Title"]</h1>
</center>

<form class="text-center border border-light p-5" method="post">
    <center>
        <div class="form-group col-md-4">
            <label class="text-info" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" width:20em />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="text-info" asp-for="Image"></label>
            <input asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label class="text-info" asp-for="Description"></label>
            <input asp-for="Description" class="form-control" width:20em />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <hr />
        <input type="submit" class="btn btn-outline-success" value="Add" style="width:200px" />
    </center>
</form>