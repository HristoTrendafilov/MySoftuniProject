@using AllAboutGames.Web.ViewModels.ForumPosts
@model PostViewModel
@section Css{ 
    <link href="/css/forumDetails.css" rel="stylesheet" asp-append-version="true"/>
}
@{
    this.ViewData["Title"] = Model.Title;
}
<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="@Model.UserProfilePicture" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body ml-3">
                            <a asp-controller="Users" asp-action="Profile" asp-route-id="@Model.UserId" data-abc="true">@Model.UserUserName</a>
                            <div class="text-muted small">@Model.CreatedOnAsString</div>
                        </div>
                        <div class="text-muted small ml-3">
                            <div>Member since <strong>@Model.UserCreatedOnAsString</strong></div>
                            <div><strong>@Model.UserForumPostsCount</strong> posts</div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <center>
                        <div class="justify-content-center" style="font-size:20px; margin-bottom:10px"><strong><u>@Model.Title</u></strong></div>
                    </center>
                    <p style="color:black; font-size:16px">
                        @Model.Content
                    </p>
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                    <div class="px-4 pt-3">
                        <a href="" class="text-muted d-inline-flex align-items-center align-middle" data-abc="true"> <i class="fa fa-heart text-danger"></i>&nbsp; <span class="align-middle">@Model.Likes</span> </a>
                        <span class="text-muted d-inline-flex align-items-center align-middle ml-4"> <i class="fas fa-comment"></i>&nbsp; <span class="align-middle">@Model.CommentsCount</span> </span>
                    </div>
                    <div class="px-4 pt-3"> <button type="button" class="btn btn-primary"><i class="ion ion-md-create"></i>&nbsp; Reply</button> </div>
                </div>
            </div>
        </div>
    </div>
</div>