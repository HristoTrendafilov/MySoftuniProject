@using AllAboutGames.Web.ViewModels.ForumPosts
@using AllAboutGames.Common
@using System.Security.Claims;
@model PostViewModel
@section CustomCss{
    <link href="/css/forumDetails.css" rel="stylesheet" asp-append-version="true" />
}
@{
    this.ViewData["Title"] = Model.Title;
}
<div class="container-fluid mt-100" style="margin-bottom:50px">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="@Model.UserProfilePicture" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body ml-3">
                            <a asp-controller="Users" asp-action="Profile" asp-route-id="@Model.UserId" data-abc="true">@Model.UserUserName</a>
                            <div class="text-muted small">@Model.CreatedOnAsString</div>
                        </div>
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName) ||
                                this.User.FindFirst(ClaimTypes.NameIdentifier).Value == Model.UserId)
                            {
                                <div class="media-body ml-3">
                                    <a asp-controller="ForumPosts" asp-action="Delete" asp-route-id="@Model.Id" type="button" class="btn btn-outline-danger" style="width:150px">Delete post</a>
                                </div>
                                <div class="media-body ml-3">
                                    <a asp-controller="ForumPosts" asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-outline-info" style="width:150px">Edit post</a>
                                </div>
                            }
                        }
                        <div class="text-muted small ml-3">
                            <div>Member since <strong>@Model.UserCreatedOnAsString</strong></div>
                            <div><strong>@Model.UserForumPostsCount</strong> posts</div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <center>
                        <div class="justify-content-center" style="font-size:20px; margin-bottom:10px"><strong><u>@Model.Title</u></strong></div>
                    </center>
                    <p style="color:black; font-size:16px">
                        @Model.Content
                    </p>
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                    <div class="px-4 pt-3">
                        <i style="cursor:pointer" onclick="Like('@Model.Id')" class="fa fa-heart text-danger"></i> <a id="LikesCount" class="text-muted d-inline-flex align-items-center align-middle" data-abc="true">&nbsp; <span class="align-middle">@Model.ForumLikesCount</span> </a>
                        <span class="text-muted d-inline-flex align-items-center align-middle ml-4">
                            <i class="fas fa-comment"></i>&nbsp; <span class="align-middle">@Model.CommentsCount</span>
                            @if (!this.User.Identity.IsAuthenticated)
                            {
                                <span style="margin-left:100px"><strong>log in to like the post</strong></span>
                            }
                        </span>
                    </div>
                    <div class="px-4 pt-3"> <button type="button" class="btn btn-primary"><i class="ion ion-md-create"></i>&nbsp; Reply</button> </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        function Like(postId) {
            var json = { forumPostId: postId };
            console.log(json);

            $.ajax({
                type: "POST",
                url: "/api/ForumLikes",
                data: JSON.stringify(json),
                success: function (data) {
                    console.log(data)
                },
                contentType: 'application/json',
                success: (function (data) {
                    $('#LikesCount').html(data.likesCount)
                })
            })
        }
    </script>
}