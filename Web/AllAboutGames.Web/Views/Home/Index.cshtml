@using AllAboutGames.Common
@using AllAboutGames.Web.ViewModels.Home
@model IndexPageViewModel
@{
    this.ViewData["Title"] = "Home Page";
}
@section Css{
    <link href="~/css/Index.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/Cards.css" rel="stylesheet" asp-append-version="true" />
}

<div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/HomeScreenCarousel/make-a-beautiful-collage-of-video-game-characters.jpg" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="border-black">Keep track on the newest games here!</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/HomeScreenCarousel/page-1.png" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="border-black" style="position:relative; bottom:400px; border:none; left:60px">Ask questions and communicate in the forum</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/HomeScreenCarousel/Product_review1.jpg" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="border-black">Add reviews and see what other people think about games</h1>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<section style="margin-top:60px;">
    <div class="box float-left" style="margin-bottom: 100px; margin-left:50px">
        <h3 style="margin-left:50px; color:red">Top Rated Game</h3>
        @for (int i = 0; i < 5; i++)
        {
            if (i < Math.Floor(Model.TopRatedGame.Rating))
            {
                <span class="fa fa-star checked star"></span>
            }
            else
            {
                <span class="fa fa-star star unchecked"></span>
            }
        }
        <span style="color:white; font-size:30px;"><span style="color:red">@Model.TopRatedGame.Rating</span>/5</span>
        <div class="card" style="margin-top:20px">
            <div class="imgBx">
                <img src="@Model.TopRatedGame.Image" alt="images">
            </div>
            <div class="details">
                <h2>@Model.TopRatedGame.Name<br><span>@Model.TopRatedGame.DeveloperName</span></h2>
            </div>
        </div>
        <a href="/Games/Details?id=@Model.TopRatedGame.Id" class="btn btn-primary" style="margin-top:20px; width:300px">View Detail</a>
    </div>
    <h3 style="margin-left:860px; color:blue">Recent Reviews</h3>
    <table class="table table-striped float-right table-hover table-light" style="width:60%; margin-top:10px; margin-right:80px">
        <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Game</th>
                <th scope="col">Rating</th>
                <th scope="col">Added On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model.Reviews)
            {
                <tr>
                    <td>@review.ReviewedByUserName</td>
                    <td>@review.GameName</td>
                    <td>@review.GameRating</td>
                    <td>@review.CreatedOn</td>
                </tr>
            }
        </tbody>
    </table>
</section>
<div class="container" style="margin-top:550px; margin-bottom:150px">
    <h1 class="text-center" style="color:red; border:solid; border-width:5px; border-color:blue;">Read about the newest console</h1>
    <div>
        <h1 class="text-center" style="color:blue; margin-top:50px">@Model.Platform.Name</h1>
        <img style="border:solid; border-color:blue; border-width:5px; margin-top:20px; margin-left:150px" src="@Model.Platform.Image" width="750">
        <h3 style="font-size:18px; margin-top:70px; width:1300px; position:relative; right:100px">
            @Model.Platform.Info
        </h3>
    </div>
</div>
