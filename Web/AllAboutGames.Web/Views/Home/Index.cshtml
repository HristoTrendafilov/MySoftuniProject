@using AllAboutGames.Common
@using AllAboutGames.Web.ViewModels.Home
@model IndexPageViewModel
@{
    this.ViewData["Title"] = "Home Page";
}
@section CustomCss{
    <link href="~/css/Index.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/Cards.css" rel="stylesheet" asp-append-version="true" />
}

<div class="row no-gutters">
    <div class="col-md-12">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="img-fluid" src="~/images/HomeScreenCarousel/make-a-beautiful-collage-of-video-game-characters.jpg" alt="...">
                    <div class="carousel-caption">
                        <h1 class="border-black">Keep track on the newest games here!</h1>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="img-fluid" src="~/images/HomeScreenCarousel/page-1.png" alt="...">
                    <div class="carousel-caption">
                        <h2 class="border-black">Check the forum and talk about averything that interests you.</h2>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="img-fluid" src="~/images/HomeScreenCarousel/Product_review1.jpg" alt="...">
                    <div class="carousel-caption">
                        <h1 class="border-black">Add reviews and see what other people think about games</h1>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div class="row no-gutters" style="margin-top:60px">
    <div class="col-md-5">
        <div>
            <h3 class="text-danger" margin-left:100px">Top Rated Game</h3>
            <h4 style="margin-left:160px">Votes: <span class="text-danger">@Model.TopRatedGame.RatingsCount</span></h4>
            <div style="margin-left:50px">
                @for (int i = 0; i < 5; i++)
                {
                    if (i < Math.Floor(Model.TopRatedGame.Rating))
                    {
                        <span class="fa fa-star checked star"></span>
                    }
                    else
                    {
                        <span class="fa fa-star star unchecked"></span>
                    }
                }
                <span style="color:white; font-size:30px;"><span class="text-danger">@Model.TopRatedGame.Rating</span>/5</span>
            </div>
        </div>
        <div class="card" style="margin-top:10px; margin-right:280px">
            <div class="imgBx">
                <img src="@Model.TopRatedGame.Image" alt="images">
            </div>
            <div class="details">
                <h3>@Model.TopRatedGame.Name<br><span>@Model.TopRatedGame.DeveloperName</span></h>
            </div>
        </div>
        <a asp-controller="Games" asp-action="Details" asp-route-id="@Model.TopRatedGame.Id" class="btn btn-outline-info" style="margin-left:150px; margin-top:10px">View Detail</a>
    </div>
    <div class="col-md-7">
        <h3 style="color:blue;">Recent Reviews</h3>
        <table class="table table-striped table-hover table-light" style="width:100%; margin-top:20px">
            <thead>
                <tr>
                    <th scope="col">Username</th>
                    <th scope="col">Game</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Added On</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model.Reviews)
                {
                    <tr onclick="location.href = '/Reviews/Details?id=@review.GameId'">
                        <td>@review.ReviewedByUserName</td>
                        <td>@review.GameName</td>
                        <td>@review.GameRating</td>
                        <td>@review.CreatedOn</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <figure class="figure" style="margin-bottom:100px; margin-top:50px">
        <center>
            <h2 style="color:deepskyblue">Read about the newest console</h2>
            <h3 class="text-danger">@Model.Platform.Name</h3>
        </center>
        <div class="row no-gutters" style="margin-top:50px">
            <div class="col-md-5">
                <div class="col-md-12">
                    <img src="@Model.Platform.Image" class="figure-img img-fluid rounded" width="700" alt="A generic square placeholder image with rounded corners in a figure.">
                </div>
            </div>
            <div class="col-md-7">
                <div class="col-md-12">
                    <figcaption class="figure-caption" style="color:white">@Model.Platform.Info</figcaption>
                </div>
            </div>
        </div>
    </figure>

</div>