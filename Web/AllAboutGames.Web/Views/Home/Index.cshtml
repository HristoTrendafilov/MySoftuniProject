@using AllAboutGames.Common
@{
    this.ViewData["Title"] = "Home Page";
}
<div>
    <div class="float-left col-md-8">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 img-fluid" src="https://wallpapercave.com/wp/wp4576868.jpg" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>My Caption Title (1st Image)</h5>
                        <p>The whole caption will only show up if the screen is at least medium size.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 img-fluid" src="https://placeimg.com/1080/500/arch" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 img-fluid" src="https://placeimg.com/1080/500/nature" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="float-right col-md-4 no-gutters" style="margin-top:70px">
        <center>
            <h3>Top Rated Game:</h3>
        </center>
        <div class="box">
            <div class="card">
                <div class="imgBx">
                    <img src="https://wallpapercave.com/wp/wp4576868.jpg" alt="images">
                </div>
                <div class="details">
                    <h2>The Witcher 3<br><span>CD Project Red</span></h2>
                </div>
            </div>
            <button type="button" class="btn btn-primary" style="margin-left:140px; margin-top:13px">Click here for more details</button>
        </div>
    </div>
</div>
<div>
    <h3 style="padding-top:600px; margin-left:440px">Recent reviews</h3>
    <table id="reviews-table" class="table table-sm table-hover" style="width:68%; margin-left:20px">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Game</th>
                <th scope="col">Rating</th>
            </tr>
        </thead>
        <tbody>
            <tr style="cursor: pointer" ; onclick="location.href='http://yahoo.com'">
                <td>Mark</td>
                <td>Otto</td>
                <td>mdo</td>
            </tr>
            <tr>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>fat</td>
            </tr>
            <tr>
                <td>Larry</td>
                <td>the Bird</td>
                <td>twitter</td>
            </tr>
        </tbody>
    </table>
    <script>
        $('.reviews-table').animate({
            height: "0px"
        }, 
    </script>
</div>

