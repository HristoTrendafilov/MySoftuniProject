@using AllAboutGames.Web.ViewModels.Reviews
@model ReviewDetailsViewModel
@section Css{
    <link href="/css/reviewDetails.css" rel="stylesheet" asp-append-version="true" />
}
<div class="container">
    <div class="col-md-12">
        <div class="tab-pane fade active show" id="pills-reviews" role="tabpanel" aria-labelledby="pills-reviews-tab">
            <div class="bg-white rounded shadow-sm p-4 mb-4 clearfix graph-star-rating">
                <h5 class="mb-0 mb-4">Ratings and Reviews for: <span style="color:red">@Model.GameName</span></h5>
                <div class="graph-star-rating-header">
                    <div class="star-rating">
                        <a href="#"><i class="icofont-ui-rating active"></i></a>
                        <a href="#"><i class="icofont-ui-rating active"></i></a>
                        <a href="#"><i class="icofont-ui-rating active"></i></a>
                        <a href="#"><i class="icofont-ui-rating active"></i></a>
                    </div>
                    <center>
                        <p class="text-black mb-4 mt-2" style="font-size:30px">Rated <span style="color:red">@Model.AverageRating </span>out of 5</p>
                    </center>
                </div>
                <div class="graph-star-rating-body">
                    <div class="rating-list">
                        <div class="rating-list-left text-black">
                            5 Star
                        </div>
                        <div class="rating-list-center">
                            <div class="progress">
                                <div style="width:@Model.FiveStarRatingPercent" aria-valuemax="5" aria-valuemin="0" aria-valuenow="5" role="progressbar" class="progress-bar bg-primary">
                                    <span class="sr-only">80% Complete (danger)</span>
                                </div>
                            </div>
                        </div>
                        <div class="rating-list-right text-black">@Model.FiveStarRatingPercent</div>
                    </div>
                    <div class="rating-list">
                        <div class="rating-list-left text-black">
                            4 Star
                        </div>
                        <div class="rating-list-center">
                            <div class="progress">
                                <div style="width: @Model.FourStarRatingPercent" aria-valuemax="5" aria-valuemin="0" aria-valuenow="5" role="progressbar" class="progress-bar bg-primary">
                                    <span class="sr-only">80% Complete (danger)</span>
                                </div>
                            </div>
                        </div>
                        <div class="rating-list-right text-black">@Model.FourStarRatingPercent</div>
                    </div>
                    <div class="rating-list">
                        <div class="rating-list-left text-black">
                            3 Star
                        </div>
                        <div class="rating-list-center">
                            <div class="progress">
                                <div style="width: @Model.ThreeStarRatingPercent" aria-valuemax="5" aria-valuemin="0" aria-valuenow="5" role="progressbar" class="progress-bar bg-primary">
                                    <span class="sr-only">80% Complete (danger)</span>
                                </div>
                            </div>
                        </div>
                        <div class="rating-list-right text-black">@Model.ThreeStarRatingPercent</div>
                    </div>
                    <div class="rating-list">
                        <div class="rating-list-left text-black">
                            2 Star
                        </div>
                        <div class="rating-list-center">
                            <div class="progress">
                                <div style="width: @Model.TwoStarRatingPercent" aria-valuemax="5" aria-valuemin="0" aria-valuenow="5" role="progressbar" class="progress-bar bg-primary">
                                    <span class="sr-only">80% Complete (danger)</span>
                                </div>
                            </div>
                        </div>
                        <div class="rating-list-right text-black">@Model.TwoStarRatingPercent</div>
                    </div>
                    <div class="rating-list">
                        <div class="rating-list-left text-black">
                            1 Star
                        </div>
                        <div class="rating-list-center">
                            <div class="progress">
                                <div style="width: @Model.OneStarRatingPercent" aria-valuemax="5" aria-valuemin="0" aria-valuenow="5" role="progressbar" class="progress-bar bg-primary">
                                    <span class="sr-only">80% Complete (danger)</span>
                                </div>
                            </div>
                        </div>
                        <div class="rating-list-right text-black">@Model.OneStarRatingPercent</div>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded shadow-sm p-4 mb-4 restaurant-detailed-ratings-and-reviews">
                <h5 class="mb-1">All Ratings and Reviews</h5>
                @foreach (var review in Model.UserReviews)
                {
                    <div class="reviews-members pt-4 pb-4">
                        <div class="media">
                            <a href="#"><img alt="Generic placeholder image" src="http://bootdey.com/img/Content/avatar/avatar1.png" class="mr-3 rounded-pill"></a>
                            <div class="media-body">
                                <div class="reviews-members-header">
                                    <h6 class="mb-1"><a class="text-black" href="#">@review.Username</a></h6>
                                    <span>Rating: @review.Rating</span>
                                    <p class="text-gray">@review.CreatedOn</p>
                                </div>
                                <div class="reviews-members-body">
                                    <p>@review.Text</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <hr>
        </div>
    </div>
</div>