@using AllAboutGames.Web.ViewModels.InputModels
@model AddPlatformInputModel
@{
    this.ViewData["Title"] = "Add new platform";
}
<form class="text-center border border-light p-5" method="post" enctype="multipart/form-data">
    <center>
        <p class="h1 mb-4">@this.ViewData["Title"]</p>
        <div class="form-group col-md-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control mb-4">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Developer"></label>
            <input asp-for="Developer" class="form-control mb-4">
            <span asp-validation-for="Developer" class="text-danger"></span>
        </div>
        <div class="form-group, col-md-4">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control-file text-white">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3 mt-md-3">
            <label asp-for="ReleaseDate"></label>
            <input type="date" asp-for="ReleaseDate" class="form-control mb-4">
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
        <div class="form-row justify-content-center mt-md-3">
            <textarea asp-for="Info" style="width:80%;" class="form-control rounded-0" id="exampleFormControlTextarea2" rows="5" placeholder="Info"></textarea>
        </div>
        <span asp-validation-for="Info" class="text-danger"></span>
    </center>
    <button style="position:relative; top:100px; width:200px" type="submit" class="btn btn-outline-success">Add</button>
</form>
