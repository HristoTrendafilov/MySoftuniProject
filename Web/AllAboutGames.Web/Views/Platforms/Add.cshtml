@using AllAboutGames.Web.ViewModels.Platforms
@model CreatePlatformViewModel

<form class="text-center border border-light p-5" method="post">
    <center>
        <p class="h1 mb-4">Add new platform</p>
        <div class="form-group col-md-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control mb-4">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Developer"></label>
            <input asp-for="Developer" class="form-control mb-4">
            <span asp-validation-for="Developer" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control mb-4">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="ReleaseDate"></label>
            <input type="date" asp-for="ReleaseDate" class="form-control mb-4">
        </div>
        <div class="form-row justify-content-center" style="position:relative; top:20px">
            <textarea asp-for="Info" style="width:1000px; position:relative; bottom:30px" class="form-control rounded-0" id="exampleFormControlTextarea2" rows="5" placeholder="Info"></textarea>
        </div>
        <button type="submit" class="btn btn-outline-primary">Add</button>
    </center>
</form>
